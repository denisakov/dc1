<p id="notice"><%= notice %></p>
<p>
	<b>Title:</b>
	<%= @project.title %>
</p>
<p>
	<b>Reference number:</b>
	<%= @project.refno %>
</p>
<p>
	<b>Standard:</b>
	<%= @project.standards.first.name %>
</p>
<p>
	<b>Scale:</b>
	<% if !@project.scale.blank? %>
		<%= @project.scale %>
	<% else %>
		<%= "Unknown" %>
	<% end %>
</p>
<p>
	<b>Validating DOE:</b>
	<% if !@project.entities.where(:role => "val_doe").first.blank? %>
		<%= @project.entities.where(:role => "val_doe").first.stakeholder.title %>
	<% else %>
		<%= "Unknown" %>
	<% end %>
</p>
<p>
	<b>Verifying DOEs:</b>
	<% if !@project.entities.where(:role => "ver_doe").first.blank? %>
		<%= @project.entities.where(:role => "ver_doe").first.stakeholder.title %>
	<% else %>
		<%= "Unknown" %>
	<% end %>
</p>
<p>
	<b>Host country:</b>
	<% if @project.roles.where(:role => "Host").first then %>
      <%= @project.countries.where(:id => @project.roles.where(:role => "Host").first.country_id).first.name %>
      <% else %>
      <%= "Unknown" %>
    <% end %>
</p>
<p>
	<b>Project participants:</b>
	<% if !@project.entities.where(:role => "host_pp").first %>
		<%= @project.entities.where(:role => "host_pp").first.stakeholder.title %>
	<% else %>
		<%= "Unknown" %>
	<% end %>
</p>
<p>
	<b>Investor countries:</b>
	<% if !@project.roles.where(:role => "Investor").blank? then %>
        <% @project.roles.where(:role => "Investor").each do |x| %>
          <% @project.countries.where(:id => x.country_id).each do |y| %>
            <ul><%= y.name %></ul>
          <% end %>
        <% end %>
    <% else %>
	    <%= "None" %>
    <% end %>
</p>
<p>
	<b>Fee:</b>
	<% if !@project.fee.blank? %>
		$<%= @project.fee %>
	<% else %>
		<%= "Unknown" %>
	<% end %>
</p>

<p>
	<b>Documents:</b>
	<% @project.documents.each do |d| %>
		<ul><%= link_to d.title, d.link %>
		</ul>
	<% end %>
</p>


<%= link_to 'Edit', edit_project_path(@project), :class => 'btn btn-mini' %> |
<%= link_to 'Back', projects_path, :class => 'btn btn-mini' %>
