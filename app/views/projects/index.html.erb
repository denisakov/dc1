<h2>Projects</h2>


<table class="table table-condensed table-hover">
  <thead>
    <tr>
    <th>Ref</th>
    <th width="100%">Title</th>
    <th># of docs</th>
    <th>Host<br />country</th>
    <th>Standard</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @projects.each do |p| %>
  <tr>
    <td valign="top"><%= p.refno %></td>
    <td valign="top"><%= link_to p.title, project_path(p) %></td>
    <td align="center"><%= p.documents.count %></td>
    <td><%= Country.find_by_project_id(p.id).name %></td>
    <td align="center"><%= Standard.find_by_project_id(p.id).name %></td>
    <td><%= link_to 'Edit', edit_project_path(p), :class => 'btn btn-mini' %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<% content_for :title do %>Projects<% end %>
<% content_for :description do %>My Description<% end %>