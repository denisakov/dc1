 
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th>Projects</th>
      <th></th>
    </tr>
  </thead>
<% @standards.each do |standard| %>
  <tr>
    <td><%= standard.name %></td>
    <td><%= standard.short_name %></td>
    <td><%= standard.projects.count %></td>
    
    <td><%= link_to 'Edit', edit_standard_path(standard) %></td>
    
  </tr>
<% end %>
</table>