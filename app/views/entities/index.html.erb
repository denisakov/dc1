(<%= @entities.count %>)
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>
        <label class="checkbox">
          <input type="checkbox" value="">
        </label>
      </th>
      <th><small>Title</small></th>
      <th><small>Short title</small></th>
      <th><small>HQ country</small></th>
      <th><small>No. of projects</small></th>
      <th></th>
      
      <th></th>
    </tr>
  </thead>
  <tbody>

<% @entities.each do |entity| %>
  <tr>
    <td>
      <label class="checkbox">
        <input type="checkbox" value="">
      </label>
    </td>
    <td><%= link_to entity.title, entity %></td>
    <td><%= entity.short_title %></td>
    <td>
      <% if entity.country.name == "United Kingdom of Great Britain and Northern Ireland" then %>
        <%= "UK" %><br />
      <% else %>
        <%= entity.country.name %><br />
      <% end %>
    </td>
    <td><%= entity.projects.count %></td>
    <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
    <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New entity', new_entity_path %>
